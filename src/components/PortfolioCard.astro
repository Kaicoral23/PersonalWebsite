---
interface Props {
  title: string;
  description: string;
  url: string;
  platform: string;
  thumbnail?: string;
}

const { title, description, url, platform, thumbnail } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="portfolio-card card">
  <div class="portfolio-card-image">
    {thumbnail ? (
      <img src={thumbnail} alt="" loading="lazy" />
    ) : (
      <div class="portfolio-card-placeholder">
        <span class="platform-badge">{platform}</span>
      </div>
    )}
  </div>
  <div class="portfolio-card-body">
    <h3 class="portfolio-card-title">{title}</h3>
    <p class="portfolio-card-desc">{description}</p>
    <span class="portfolio-card-link">Watch â†’</span>
  </div>
</a>

<style>
  .portfolio-card {
    display: block;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    overflow: hidden;
    transition: background-color var(--theme-duration) ease, border-color var(--theme-duration) ease, transform 0.15s ease;
  }

  .portfolio-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .portfolio-card-image {
    aspect-ratio: 16 / 10;
    background: var(--color-card-placeholder);
    position: relative;
  }

  .portfolio-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .portfolio-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .platform-badge {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .portfolio-card-body {
    padding: var(--space-md);
  }

  .portfolio-card-title {
    margin: 0 0 var(--space-xs);
    font-size: 1.125rem;
  }

  .portfolio-card-desc {
    margin: 0 0 var(--space-sm);
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  .portfolio-card-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
  }
</style>
